<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="frasealeatoria.meusapps.tiboy.frasealeatoria20.MainActivity"
    android:background="@android:color/background_light">

    <TextView
        android:text="FRASE ALEATORIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:id="@+id/textView"
        android:textSize="18sp" />

    <TextView
        android:text="Palavra1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_marginTop="19dp"
        android:id="@+id/editText_main_palavra1"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2"
        android:hint="Digite sua primeira palavra" />

    <TextView
        android:text="Palavra2:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_main_palavra1"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="33dp"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_main_palavra2"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView3"
        android:hint="Digite sua segunda palavra" />

    <TextView
        android:text="Palavra3:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_main_palavra2"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="28dp"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText_main_palavra2"
        android:layout_marginTop="14dp"
        android:id="@+id/editText_main_palavra3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4"
        android:hint="Digite a sua terceira palavra" />

    <TextView
        android:text="Palavra4:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_main_palavra3"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="41dp"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText_main_palavra3"
        android:layout_marginTop="23dp"
        android:id="@+id/editText_main_palavra4"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5"
        android:hint="Digite a sua quarta palavra" />

    <Button
        android:text="Gerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_main_palavra4"
        android:layout_marginTop="52dp"
        android:id="@+id/button_main_gerar"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView5" />
</RelativeLayout>
